<!--pages/statisticalAnalysis/statisticalAnalysis.wxml-->
<view class="page">
<view class="page__bd">
<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">近7天</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">近30天</view>
  <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">近90天</view>
</view>


<swiper current="{{currentTab}}" duration="300" bindchange="swiperTab" style="height:{{scrollHeight}}px;margin-bottom:46px;">
  
  <swiper-item>
    <scroll-view scroll-y="true" style="height:{{scrollHeight - 10}}px;"> 
      <view class="container">
          <canvas canvas-id="lineCanvas" disable-scroll="true" class="canvas" bindtouchstart="touchHandler"></canvas>
          <button type="primary" bindtap="updateData">更新数据</button>
      </view>
    </scroll-view>
  </swiper-item>
  
  <swiper-item>
    <navigator url="" hover-class="weui-cell_active">
      <view class="weui-panel mypanel" style="margin-top:20rpx;">
        <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__title weui-media-box__title_in-text">吹风机</view>
            <view class="weui-cell__ft weui-cell__ft_in-access flag"></view>
            <view class="weui-media-box__info">
              <view class="weui-media-box__info__meta" style="color:#666;">设备地址：</view>
              <view class="weui-media-box__info__meta" style="color:#666;">嘉皇源科技园</view>
            </view>
          </view>
        </view>
      </view>
    </navigator>
  </swiper-item>
  <swiper-item>
    <navigator url="" hover-class="weui-cell_active">
      <view class="weui-panel mypanel" style="margin-top:20rpx;">
        <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__title weui-media-box__title_in-text">洗衣机</view>
            <view class="weui-cell__ft weui-cell__ft_in-access flag"></view>
            <view class="weui-media-box__info">
              <view class="weui-media-box__info__meta" style="color:#666;">设备地址：</view>
              <view class="weui-media-box__info__meta" style="color:#666;">嘉皇源科技园</view>
            </view>
          </view>
        </view>
      </view>
    </navigator>
  </swiper-item>
  

</swiper>
  
</view>
</view>
