<!--pages/orderManage/orderManage.wxml-->
<view class="page">
<view class="page__bd">
<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">已结算订单</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">待结算订单</view>
</view>


<swiper current="{{currentTab}}" duration="300" bindchange="swiperTab" style="height:{{scrollHeight}}px;margin-bottom:46px;">
  
  <swiper-item>
  <scroll-view scroll-y="true" style="height:{{scrollHeight - 10}}px;"> 
      <view class="weui-panel mypanel" style="margin-top:20rpx;" bindtouchstart="touchStart" bindtouchend="touchEnd" bindlongtap="bingLongTap" bindtap="goDeviceInfo" wx:for="{{list}}" wx:key="unique" data-id="{{item.id}}" data-devicename="{{item.deviceName}}" data-index="{{index}}">
        <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__title weui-media-box__title_in-text">热水澡：{{item.address}}</view>
            <view class="weui-cell__ft weui-cell__ft_in-access flag"></view>
            <view class="weui-media-box__info">
              <view class="weui-media-box__info__meta" style="color:#666;">金额：</view>
              <view class="weui-media-box__info__meta" style="color:red;">￥0.01</view>
            </view>
            <view class="weui-media-box__info">
              <view class="weui-media-box__info__meta" style="color:#666;">时间：</view>
              <view class="weui-media-box__info__meta" style="color:#666;">{{item.createTime}}</view>
            </view>
          </view>
        </view>
      </view> 
    </scroll-view>
  </swiper-item>
  
  <swiper-item>
    <navigator url="" hover-class="weui-cell_active">
      <view class="weui-panel mypanel" style="margin-top:20rpx;">
        <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__title weui-media-box__title_in-text">热水澡：乾元通科技嘉皇源A座1楼101号</view>
            <view class="weui-cell__ft weui-cell__ft_in-access flag"></view>
            <view class="weui-media-box__info">
              <view class="weui-media-box__info__meta" style="color:#666;">待结算金额：</view>
              <view class="weui-media-box__info__meta" style="color:red;">￥0.01</view>
            </view>
            <view class="weui-media-box__info">
              <view class="weui-media-box__info__meta" style="color:#666;">时间：</view>
              <view class="weui-media-box__info__meta" style="color:#666;">2018-07-15 14:06:26</view>
            </view>
          </view>
        </view>
      </view>
    </navigator>
  </swiper-item>
  

</swiper>
</view>
</view>
